{
	"name": "asciibar",
	"version": "1.0.0",
	"scripts": {
		"build": "pnpm compile && cp -R ./src/assets/* ./public && cp ./public/index.txt ./readme.txt",
		"clean": "rm -rf ./public && mkdir -p ./public",
		"compile": "hbs --helper ./src/helpers/currentDate.js --helper ./src/helpers/ingredientItem.js --helper ./src/helpers/smartBreak.js --helper ./src/helpers/upperCase.js --data ./src/data.json --output ./public/ --extension txt ./src/*.txt",
		"dev": "pnpm clean && pnpm watch & pnpm serve",
		"serve": "serve ./public",
		"watch": "nodemon --watch ./src --exec 'pnpm build'"
	},
	"devDependencies": {
		"cspell": "^9.2.0",
		"hbs-cli": "^1.4.1",
		"lodash-es": "^4.17.21",
		"nodemon": "^3.1.10",
		"serve": "^14.2.4"
	},
	"engines": {
		"node": "22.x"
	},
	"packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
